---
export interface Props {
  title: string;
  description: string;
  tags?: string[];
  repo?: string;
  demo?: string;
  image?: string;
}
const { title, description, tags = [], repo, demo, image } = Astro.props as Props;
---
<article class="group overflow-hidden rounded-xl border border-gray-200/50 dark:border-gray-700/50 bg-white/70 p-0 shadow-sm backdrop-blur hover:shadow-xl hover:-translate-y-1 hover:border-primary-300 dark:hover:border-primary-700 transition-all duration-300 dark:bg-black/30">
  {image && (
    <div class="overflow-hidden">
      <img src={image} alt={title} class="h-40 w-full object-cover group-hover:scale-110 transition-transform duration-500" loading="lazy" />
    </div>
  )}
  <div class="p-5">
    <h3 class="text-lg font-semibold mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">{title}</h3>
    <p class="text-sm text-gray-600 dark:text-gray-300 mb-3">{description}</p>
  {tags.length > 0 && (
    <ul class="flex flex-wrap gap-2 mb-3">
      {tags.map((t) => <li class="text-xs bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full px-2 py-1 font-medium hover:bg-primary-100 dark:hover:bg-primary-900 hover:scale-105 transition-all duration-200 cursor-default">{t}</li>)}
    </ul>
  )}
    <div class="flex gap-3 text-sm">
      {repo && <a class="inline-flex items-center gap-1 text-primary-600 dark:text-primary-400 hover:gap-2 transition-all" href={repo} target="_blank" rel="noreferrer">
        <span>CÃ³digo</span>
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
      </a>}
      {demo && <a class="inline-flex items-center gap-1 text-primary-600 dark:text-primary-400 hover:gap-2 transition-all" href={demo} target="_blank" rel="noreferrer">
        <span>Demo</span>
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
      </a>}
    </div>
    <slot />
  </div>
</article>
