---
export interface Props {
  name?: string;
  role?: string;
  pitch?: string;
  ctaPrimaryHref?: string;
  ctaPrimaryText?: string;
  ctaSecondaryHref?: string;
  ctaSecondaryText?: string;
}
const {
  name = 'Kauan Kyoshi Kubo Lima',
  role = 'Cadete 42SP · Desenvolvedor',
  pitch = 'Crio soluções eficientes e bem testadas em C, sistemas e web. Busco oportunidades para contribuir em times que valorizam qualidade e aprendizado contínuo.',
  ctaPrimaryHref = '/projects',
  ctaPrimaryText = 'Ver Projetos',
  ctaSecondaryHref = 'mailto:kauankyoshik@gmail.com',
  ctaSecondaryText = 'Contato',
} = Astro.props as Props;
---
<section class="relative overflow-hidden py-12" id="hero-section">
  <div class="relative parallax-layer">
    <div class="mx-auto max-w-4xl">
      <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
        <div class="flex-shrink-0 animate-scale-in">
          <img src="/profile.jpg" alt={name} class="w-48 h-48 rounded-full object-cover shadow-xl ring-4 ring-primary-100 dark:ring-primary-900 hover:scale-105 hover:rotate-2 transition-transform duration-300" />
        </div>
        <div class="flex-1 text-center md:text-left">
          <div class="inline-flex items-center gap-2 rounded-full border bg-white/60 px-3 py-1 text-xs backdrop-blur dark:bg-black/30 animate-fade-in">
            <span class="h-2 w-2 animate-pulse rounded-full bg-emerald-500"></span>
            Disponível para oportunidades
          </div>
          <h1 class="mt-6 text-4xl font-extrabold tracking-tight sm:text-5xl animate-fade-in delay-100">
            {name}
          </h1>
          <p class="mt-2 text-lg text-gray-600 dark:text-gray-300 animate-fade-in delay-200">{role}</p>
          <p class="mt-6 text-base text-gray-700 dark:text-gray-200 animate-fade-in delay-300">{pitch}</p>
          <div class="mt-8 flex flex-wrap items-center justify-center md:justify-start gap-3 animate-fade-in delay-400">
        <a href={ctaPrimaryHref} class="group rounded-md bg-primary-600 px-5 py-2.5 text-white shadow-lg hover:bg-primary-700 hover:shadow-xl hover:-translate-y-0.5 transition-all duration-200">
          <span class="inline-flex items-center gap-2">
            {ctaPrimaryText}
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
          </span>
        </a>
        <a href={ctaSecondaryHref} class="rounded-md border px-5 py-2.5 hover:bg-gray-50 dark:hover:bg-gray-800 hover:-translate-y-0.5 transition-all duration-200">{ctaSecondaryText}</a>
        <a href="https://github.com/kauan-kyoshi" target="_blank" class="rounded-md border px-5 py-2.5 hover:bg-gray-50 dark:hover:bg-gray-800 hover:-translate-y-0.5 transition-all duration-200">GitHub</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script is:inline>
    // Parallax effect no Hero
    if (typeof window !== 'undefined') {
      const heroSection = document.getElementById('hero-section');
      const parallaxLayer = heroSection?.querySelector('.parallax-layer');
      
      if (parallaxLayer) {
        window.addEventListener('scroll', () => {
          const scrolled = window.pageYOffset;
          const rate = scrolled * 0.3;
          parallaxLayer.style.transform = `translateY(${rate}px)`;
        });
      }
    }
  </script>
</section>
